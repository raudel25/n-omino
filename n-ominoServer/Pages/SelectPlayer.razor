@using Player
@using Rules
@typeparam T

<h3>SelectPlayer</h3>

<button @onclick="()=>PlayersList.Add(_players)">SelectPlayer</button>

@code {
    private List<Player.Player<T>> _players = new List<Player<T>>() {new RandomStrategyPlayer<T>(new IStrategy<T>[]{}, new ICondition<T>[]{}, new GreedyPlayer<T>(),0), 
        new RandomStrategyPlayer<T>(new IStrategy<T>[]{}, new ICondition<T>[]{}, new GreedyPlayer<T>(),1),
        new RandomStrategyPlayer<T>(new IStrategy<T>[]{}, new ICondition<T>[]{}, new GreedyPlayer<T>(),2), 
        new RandomStrategyPlayer<T>(new IStrategy<T>[]{}, new ICondition<T>[]{}, new GreedyPlayer<T>(),3)};
    
    [Parameter]
    
    public List<List<Player<T>>> PlayersList { get; set; }

}